{{>layout/header}}
    <h1> 게시판 </h1>
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-6">
                <a href="/posts/save" role="button" class="btn btn-outline-primary">글 등록</a>
                {{#name}}
                    name: <span id="user">{{name}}</span>
                    login_time: <span id="login_time">{{loginTime}}</span>
                    <a href="/logout" class="btn btn-info active" role="button">Logout</a>
                    <a href="/change-user-info" class="btn btn-success active" role="button">계정정보 변경</a>
                {{/name}}
                {{^name}}
                    <a href="/oauth2/authorization/google" class="btn btn-success active" role="button">Google Login</a>
                    <a href="/local-login" class="btn btn-success active" role="button">Local Login</a>
                {{/name}}
            </div>
        </div>
        <br>
        <!-- 목록 출력 영역 -->
        <table class="table table-horizontal table-borderd">
            <thead class="thead-strong">
            <tr>
                <th>게시글 번호</th>
                <th>제목</th>
                <th>작성자</th>
                <th>최종수정일</th>
            </tr>
            </thead>
            <tbody id="tbody">
            {{#posts}}
                <tr>
                    <td>{{id}}</td>
                    <td><a href="/posts/update/{{id}}">{{title}}</a></td>
                    <td>{{author}}</td>
                    <td>{{formatedModifiedDate}}</td>
                </tr>
            {{/posts}}
            </tbody>
        </table>
    </div>
{{>layout/footer}}
